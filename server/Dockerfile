FROM node:16-alpine
RUN npm install -g yarn
WORKDIR /app

ARG MONGO_URI
ARG NEXT_HOST
ARG API_HOST
ARG SECRET
ARG GMAIL
ARG KEY

ENV MONGO_URI $MONGO_URI
ENV NEXT_HOST $NEXT_HOST
ENV API_HOST $API_HOST
ENV SECRET $SECRET
ENV GMAIL $GMAIL
ENV KEY $KEY

COPY ./package.json ./
RUN yarn

COPY . .
EXPOSE 8000
CMD ["yarn","dev"]
